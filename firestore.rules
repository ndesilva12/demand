rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Demands collection
    match /demands/{demandId} {
      // Anyone can read public demands
      allow read: if resource.data.visibility == 'public' || 
                     (isSignedIn() && resource.data.creatorId == request.auth.uid);
      
      // Only authenticated users can create demands
      allow create: if isSignedIn() && 
                       request.resource.data.creatorId == request.auth.uid &&
                       request.resource.data.createdAt == request.time &&
                       request.resource.data.updatedAt == request.time;
      
      // Only creator can update their own demands
      allow update: if isSignedIn() && 
                       resource.data.creatorId == request.auth.uid &&
                       request.resource.data.creatorId == resource.data.creatorId;
      
      // Only creator can delete their demands
      allow delete: if isSignedIn() && resource.data.creatorId == request.auth.uid;
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Anyone can read messages for public demands
      allow read: if true;
      
      // Only authenticated users can create messages
      allow create: if isSignedIn() && 
                       request.resource.data.authorId == request.auth.uid &&
                       request.resource.data.createdAt == request.time;
      
      // Only author can update/delete their own messages
      allow update, delete: if isSignedIn() && 
                               resource.data.authorId == request.auth.uid;
    }
    
    // User profiles (optional, for future use)
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
  }
}
