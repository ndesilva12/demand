rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Demands collection
    match /demands/{demandId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
      
      // Subcollections
      match /messages/{messageId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
      
      match /corporateResponses/{responseId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
      
      match /spokespersonNominations/{nomId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }
    
    // Users
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }
    
    // Companies
    match /companies/{companyId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Coalitions
    match /coalitions/{coalitionId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Pressure Board
    match /pressureBoard/{entryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Weekly Digests
    match /weeklyDigests/{digestId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Messages (top-level)
    match /messages/{messageId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Corporate Responses (top-level)
    match /corporateResponses/{responseId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Edit Proposals
    match /editProposals/{proposalId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Demand Forks
    match /demandForks/{forkId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Notifications
    match /notifications/{notifId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
  }
}
